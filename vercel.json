{
    "version": 2,

    "routes": [
      { "handle": "filesystem" },
      { "src": "\/(.*)", "dest": "app/main.py" }
    ],

    "functions": {
      "app/main.py": {
        "runtime": "python3.11",
        "memory": 1024,
        "maxDuration": 30
      },
      "api/cleanup.py": {
        "schedule": "@daily"
      }
    }
  }
