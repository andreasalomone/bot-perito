{
    "version": 2,
  
    "installCommand": "pip install -r requirements-prod.txt --target .",

    "builds": [
      {
        "src": "app/main.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.11",
          "memory": 1024,
          "maxDuration": 30
        }
      }
    ],
  
    "routes": [
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "app/main.py" }
    ]
  }