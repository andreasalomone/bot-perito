{
    "version": 2,
  
    "builds": [
      { "src": "app/main.py", "use": "@vercel/python" }
    ],
  
    "routes": [
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "app/main.py" }
    ],
  
    "functions": {
      "app/main.py": {
        "runtime": "python3.11",
        "memory": 1024,
        "maxDuration": 30
      }
    },
  
    "excludeFiles": [
      ".git/**",
      "**/__pycache__/**",
      "**/*.pyc",
      ".venv/**",
      ".DS_Store"
    ]
  }