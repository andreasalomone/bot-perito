{
    "version": 2,

    "builds": [
      { "src": "app/main.py",  "use": "@vercel/python", "config": { "runtime": "python3.11", "maxDuration": 30, "memory": 1024 } },
      { "src": "frontend/**",  "use": "@vercel/static" }
    ],

    "routes": [
      { "src": "/api/(.*)", "dest": "app/main.py" },
      { "handle": "filesystem" },
      { "src": "/(.*)",        "dest": "/frontend/$1" }
    ],

    "functions": {
      "api/cleanup.py": { "schedule": "@daily" }
    }
  }
